<div class="header-section">
  <div>Login/SignUp</div>
</div>

<div class="main-container register-section">

<section class="login-section">
  <h2 class="text-center">Login</h2>
  <form class="login-form">
    <div class="form-group">
      <div class="form-input-sections">
        <div>
          <label for="email-login">email:</label>
          <input class="form-input form-control" type="text" id="email-login"/>
        </div>
          <label for="password-login">password:</label>
          <input class="form-input form-control" type="password" id="password-login"/>
      </div>
        <button class="btn btn-primary" type="submit">login</button>
    </div>
  </form>
</section>


<section class="signup-section">
  <h2 class="text-center">Signup</h2>
  <form class="signup-form">
    <div class="form-group">
      <div class="form-input-sections">
        <label for="email-signup">email:</label>
        <input class="form-input form-control" type="text" id="email-signup"/>
        <label for="password-signup">password:</label>
        <input class="form-input form-control" type="password" id="password-signup"/>
      </div>
        <button class="btn btn-primary" type="submit">signup</button>
    </div>
  </form>
</section>   

</div>

<script src="/js/login.js"></script>